@{
    ViewData["Section"] = "Administration Panel";
    ViewData["Subsection"] = "Edit Role";
}
@model neobooru.ViewModels.Forms.EditRoleViewModel


<div class="row">
    <h1>Edit Role</h1>
</div>
<div class="row">
    <form method="post" class="col-12">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>
</div>
<div class="row mt-5">
    <h1>Users with this role</h1>
</div>
<div class="row">

</div>
<div class="row">
    <a asp-action="EditUsersInRole" asp-controller="AdministratorPanel" 
       asp-route-roleId="@Model.Id" class="btn btn-primary">Add or remove users</a>
</div>

@{
    ViewData["Section"] = "Administration Panel";
    ViewData["Subsection"] = "Edit User";
}
@model List<neobooru.ViewModels.Forms.RoleCheckboxViewModel>

<div class="row">
    <h1>Edit User's Roles</h1>
</div>
<div class="row">
    <form method="post" class="col-12">
        <div class="form-group row">
            <div class="col-sm-10">
                @foreach (var roleCheckbox in Model)
                {
                <div class="form-check">
                    <input type="checkbox" asp-for="@roleCheckbox.Selected" class="form-check-input">
                    <label class="form-check-label" asp-for="@roleCheckbox.Role">@roleCheckbox.Role</label>
                </div>
                }
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>
</div>
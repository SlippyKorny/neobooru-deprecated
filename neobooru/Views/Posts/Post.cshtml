@{
    ViewData["Section"] = "Posts";
    ViewData["Subsection"] = "Post";
}
@model neobooru.ViewModels.PostViewModel

<div id="art-box">
    <div id="art-fullsize-container" class="p-2" style="border: 2px dashed #218c74;">
        Click <a href="#" style="color: #218c74">here</a> to see the image at full resolution.
    </div>
    <div id="image-container" class="mt-3">
        <img src="@Url.Content(Model.LargeFileUrl)" style="display: block; margin-left: auto; margin-right: auto; max-height: 720px;"/>
    </div>
    <div id="art-data">
        <div class="row">
            <h2 class="float-left">@Model.PostName</h2>
            <div class="float-left ml-3 mt-2 text-muted">by <a href="#">@Model.ArtistName</a></div>
        </div>
        <hr/>

        <div class="row">
            <div class="col-sm-10">
                <div class="row">
                    <div class="py-1"><b>Tags:</b></div>
                    @foreach (KeyValuePair<Tag.TagType, List<string>> tagPair in Model.TagStructure)
                    {
                        @if (tagPair.Value.Count > 0)
                        {
                            <div class="mt-1 mx-2 p-1 px-2" style="border: 2px dashed #218c74; border-radius: 2px;">
                                <span class="tag-cathegory">@tagPair.Key:&nbsp;</span>
                                @foreach (string tag in tagPair.Value)
                                {
                                    <a href="#" class="text-muted">#@tag&nbsp;</a>
                                }
                            </div><br/>
                        }
                    }
                </div>

                <div class="row mt-1">
                    <b>Rating:</b>&nbsp;@Model.Rating
                </div>
                <div class="row mt-1">
                    <b>Post ID:</b>&nbsp;@Model.PostId
                </div>
                <div class="row mt-1">
                    <b>Source:</b>&nbsp;<a href="@Model.Source">@Model.Source</a>
                </div>
                <div class="row mt-1">
                    <b>Uploader Name:</b>&nbsp;@Model.UploaderName
                </div>
                <div class="row mt-1">
                    <b>Uploaded at:</b>&nbsp;@Model.UploadedAt
                </div>
                <div class="row mt-1">
                    <b>Size:</b>&nbsp;@Model.Size
                </div>
            </div>
            <div class="col-sm-2">
                <a href="/artists/artist?artistId=f831c02d-ae3b-4196-8fa7-89913ce207a9">
                    <div class="card">
                        <img src="@Url.Content(Model.ArtistThumbnail.PfpUrl)" class="card-img-top"/>
                        <div class="card-footer">
                            <h5 class="card-title">@Model.ArtistThumbnail.ArtistName</h5>
                            <p class="card-text">Registered Arts: 23<br/>Registered artist on: @Model.ArtistThumbnail.RegistrationTime.ToString()</p>
                            <div class="row">
                                <div class="col-sm">
                                    <i class="fas fa-star"></i> @Model.ArtistThumbnail.Subscriptions
                                </div>
                                <div class="col-sm">
                                    <i class="fas fa-eye"></i> @Model.ArtistThumbnail.ProfileViews
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>
    <hr/>
    <div id="comments-container">
        <div class="row">
            <h4>Comments</h4>
        </div>
        <div class="row">
            <i>Nothing to find here!</i>&nbsp;ヽ(￣д￣;)ノ=3=3=3
        </div>
    </div>
</div>
@{
    ViewData["Section"] = "Posts";
    ViewData["Subsection"] = "Upload";
}
@model neobooru.ViewModels.PostUploadViewModel

<div class="card">
    <div class="card-header pt-2 pb-1">
        <h3>Post Upload Form</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Posts" asp-action="UploadPostData">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-1">
                    <label asp-for="Name"></label>:
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-1">
                    <label asp-for="Author"></label>:
                </div>
                <div class="col-4">
                    <input asp-for="Author" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1">
                    <label asp-for="Source"></label>:
                </div>
                <div class="col-4">
                    <input asp-for="Source" class="form-control" />
                </div>
                <div class="col-1">
                    <label asp-for="Rating"></label>:
                </div>
                <div class="col-4">
                    <select asp-for="Rating" class="form-control">
                        @foreach (Art.ArtRating rating in (Art.ArtRating[])Enum.GetValues(typeof(Art.ArtRating)))
                        {
@*                             @{ string descriptor = (Art.ArtRating)rating.); } *@
                            <option value="@rating">@rating</option>
                        }
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>
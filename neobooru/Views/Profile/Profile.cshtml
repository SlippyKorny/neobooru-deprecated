@{
    ViewData["Section"] = "Profile";
    ViewData["Subsection"] = "My Profile";
}
@model neobooru.ViewModels.ProfileViewModel

<div id="artist-profile">
    <div id="artist-upper-section">
        <div class="row">
            @if (Model.BackgroundUrl == null)
            {
                <img src="~/img/prototyping/backgrounds/1590x540p Background Placeholder Image.png"/>
            }
            else
            {
                <img src="@Url.Content(Model.BackgroundUrl)"/>
            }
        </div>
        <div class="row" style="height: 200px; margin-top: -12.5vh;">
            <div class="col-md-1 h-100">
                <div style="margin-top: 140px; margin-left: 20px;"></div>
            </div>
            <div class="col-md-11 h-100">
                <img src="@Url.Content(Model.PfpUrl)" class="rounded float-left" style="border: solid 1px #1dd1a1; max-height:100%; margin-right: 20px;"/>
                <h2 class="float-left" style="margin-top: 140px;  display: block;">@Model.Username</h2>
                <div id="artist-data float-left" style="margin-top: 170px;">
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 40px;">
            <div class="text-secondary px-4">@Model.Descritpion</div>
            @* TODO: Recent uploads, Recent Favourites, Recent subscriptions *@
        </div>
    </div>
    <hr/>
    <div id="artist-lower-section">
        <div class="row mt-5">
            <h2 style="margin-left: auto; margin-right: auto;">Recent Uploads</h2>
        </div>
        <div class="row">
            @{ int a = 0; }
            @for (; a < Model.RecentlyUploaded.Count; a++)
            {
                <div class="col-sm">
                    <a href="@Url.Content("/posts/post?postId=" + Model.RecentlyUploaded[a].ArtId)">
                        <div class="card w-20">
                            <img src="@Url.Content(Model.RecentlyUploaded[a].FileUrl)" class="card-img-top"/>
                            <div class="card-footer">
                                <h5 class="card-title">@Model.RecentlyUploaded[a].ArtName</h5>
                                <p class="card-text">Made by @Model.RecentlyUploaded[a].ArtistName<br/>
                                    Uploaded: @Model.RecentlyUploaded[a].UploadDate.ToString()</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
            @for (; a < 5; a++)
            {
                <div class="col-sm"></div>
            }
        </div>
        <div class="row mt-4">
            <div class="col-sm text-center text-secondary">
                <a href="#">
                    <h5>
                        <i><a href="@Url.Content("/profile/uploads?profileId=" + Model.ProfileId)">See more...</a></i>
                    </h5>
                </a>
            </div>
        </div>
        <hr class="mt-0"/>
        <div class="row mt-5">
            <h2 style="margin-left: auto; margin-right: auto;">Recent Likes</h2>
        </div>
        <div class="row">
            @{ a = 0; }
            @for (; a < Model.RecentlyLiked.Count; a++)
            {
                <div class="col-sm">
                    <a href="@Url.Content("/posts/post?postId=" + Model.RecentlyLiked[a].ArtId)">
                        <div class="card w-20">
                            <img src="@Url.Content(Model.RecentlyLiked[a].FileUrl)" class="card-img-top"/>
                            <div class="card-footer">
                                <h5 class="card-title">@Model.RecentlyLiked[a].ArtName</h5>
                                <p class="card-text">Made by @Model.RecentlyLiked[a].ArtistName<br/>
                                    Uploaded: @Model.RecentlyLiked[a].UploadDate.ToString()</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
            @for (; a < 5; a++)
            {
                <div class="col-sm"></div>
            }
        </div>
        <div class="row mt-4">
            <div class="col-sm text-center text-secondary">
                <a href="#">
                    <h5>
                        <i><a href="@Url.Content("/profile/likes?profileId=" + Model.ProfileId)">See more...</a></i>
                    </h5>
                </a>
            </div>
        </div>
        <hr class="mt-0"/>
    </div>
</div>